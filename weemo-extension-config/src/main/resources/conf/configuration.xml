<configuration xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.exoplaform.org/xml/ns/kernel_1_0.xsd http://www.exoplaform.org/xml/ns/kernel_1_0.xsd"
	xmlns="http://www.exoplaform.org/xml/ns/kernel_1_0.xsd">


  <!-- This declares the default portal container for Platform -->
  <component>
    <type>org.exoplatform.container.definition.PortalContainerConfig</type>
    <init-params>
      <value-param>
        <name>default.portal.container</name>
        <value>portal</value>
      </value-param>
      <value-param>
        <name>default.rest.context</name>
        <value>rest</value>
      </value-param>
      <value-param>
        <name>ignore.unregistered.webapp</name>
        <value>true</value>
      </value-param>       
      <!-- The name of the default security realm -->
      <value-param>
        <name>default.realm.name</name>
        <value>${exo.security.domain}</value>
      </value-param>
      <object-param>
        <name>default.portal.definition</name>
        <object type="org.exoplatform.container.definition.PortalContainerDefinition">
          <!-- The path to the external properties file -->
          <field name="externalSettingsPath">
            <string>configuration.properties</string>
          </field>
          <field name="dependencies">
            <collection type="java.util.ArrayList">
               <!-- gatein -->
               <value>
                  <string>portal</string>
               </value>
               <value>
                  <string>dashboard</string>
               </value>
               <value>
                  <string>exoadmin</string>
               </value>
               <value>
                  <string>eXoGadgets</string>
               </value>
               <value>
                  <string>eXoGadgetServer</string>
               </value>
               <value>
                  <string>rest</string>
               </value>
               <value>
                  <string>web</string>
               </value>
               <value>
                  <string>eXoResources</string>
               </value>

               <!-- commons -->

               <value>
                  <string>fck</string>
               </value>
               <value>
                  <string>commons-extension</string>
               </value>
               <value>
                  <string>CommonsResources</string>
               </value>
               <value>
                  <string>cometd</string>
               </value>

               <!-- collab -->
               <value profiles="all">
                  <string>calendar-extension</string>
               </value>
               <value profiles="all">
                  <string>csResources</string>
               </value>
               <value profiles="all">
                  <string>calendar</string>
               </value>

               <!-- ECM -->

               <value>
                  <string>eXoDMSGadgets</string>
               </value>
               <value>
                  <string>eXoWCMResources</string>
               </value>
               <value>
                  <string>ecmexplorer</string>
               </value>
               <value>
                  <string>ecmadmin</string>
               </value>
               <value>
                  <string>ecm-wcm-core</string>
               </value>
               <value>
                  <string>ecm-wcm-extension</string>
               </value>
               <value>
                  <string>platform-template-waiportal</string>
               </value>
               <value>
                  <string>presentation</string>
               </value>
               <value>
                  <string>searches</string>
               </value>
               <value>
                  <string>authoring-apps</string>
               </value>
               <value>
                  <string>seo</string>
               </value>

               <!-- SOCIAL -->

               <value profiles="all">
                  <string>social-extension</string>
               </value>
               <value profiles="all">
                  <string>social-resources</string>
               </value>
               <value profiles="all">
                  <string>social</string>
               </value>
               <value profiles="all">
                  <string>social-portlet</string>
               </value>

               <!-- Knowledge -->
               <value profiles="all">
                  <string>forumResources</string>
               </value>
               <value profiles="all">
                  <string>faq</string>
               </value>
               <value profiles="all">
                  <string>forum</string>
               </value>
               <value profiles="all">
                  <string>poll</string>
               </value>
               <value profiles="all">
                  <string>wiki</string>
               </value>
               <value profiles="all">
                  <string>wiki-extension</string>
               </value>
               <value profiles="all">
                  <string>forum-extension</string>
               </value>
               <!-- Contains shared layout -->
               <value>
                  <string>platform-extension</string>
               </value>
               <value>
                  <string>platformNavigation</string>
               </value>
               <value>
                  <string>homepage-portlets</string>
               </value>
               <value>
                  <string>eXoPlatformResources</string>
               </value>
               <value>
                  <string>platform-branding</string>
               </value>
               <value>
                  <string>unified-search</string>
               </value>
               <value>
                  <string>weemo-extension</string>
               </value>
            </collection>
          </field>

          <!-- A map of settings tied to the default portal container -->
          <field name="settings">
            <map type="java.util.HashMap">
              <!-- TODO check cometd name -->
              <entry>
                <key>
                  <string>sample</string>
                </key>
                <value>
                  <string>value</string>
                </value>
              </entry>
            </map>
          </field>
        </object>
      </object-param>
    </init-params>
  </component>



	<external-component-plugins>
	  <!-- The full qualified name of the PortalContainerConfig -->
	  <target-component>org.exoplatform.container.definition.PortalContainerConfig</target-component>
	  <component-plugin>
	    <!-- The name of the plugin -->
	    <name>Change PortalContainer Definitions</name>
	    <!-- The name of the method to call on the PortalContainerConfig in order to register the changes on the PortalContainerDefinitions -->
	    <set-method>registerChangePlugin</set-method>
	    <!-- The full qualified name of the PortalContainerDefinitionChangePlugin -->
	    <type>org.exoplatform.container.definition.PortalContainerDefinitionChangePlugin</type>
	    <priority>5000</priority>
	    <init-params>
	      <value-param>
		<name>apply.default</name>
		<value>true</value>
	      </value-param>
	      <object-param>
		<name>change</name>
		<object type="org.exoplatform.container.definition.PortalContainerDefinitionChange$AddDependenciesAfter">
		  <!-- The list of name of the dependencies to add -->
		  <field name="dependencies">
		    <collection type="java.util.ArrayList">
		      <value>
		        <string>weemo-extension</string>
		      </value>
		    </collection>
		  </field>
		  <!-- The name of the target dependency -->
		  <field name="target">
		    <string>welcome-screens</string>
		  </field>
		</object>
	      </object-param>     
	    </init-params>
	  </component-plugin>
	</external-component-plugins>	
</configuration>
